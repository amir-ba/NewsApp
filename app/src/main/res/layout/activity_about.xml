<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s1908114.newsapp.AboutActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Team"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/fotoAmir"
        android:layout_marginBottom="20dp" />

    <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/fotoAmir"
             android:layout_column="0"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="50dp"
        android:layout_below="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Amir"
                android:id="@+id/textView4"
                android:layout_marginTop="30dp"
                android:layout_column="5"
                android:layout_toRightOf="@+id/fotoAmir"
                android:layout_marginLeft="75dp"
                android:textIsSelectable="true" />



            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView"
                 android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_below="@+id/fotoAmir"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rohini"
                android:id="@+id/textView5"
                android:layout_column="5"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginLeft="75dp"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginTop="30dp" />



            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView2_vasi"
                 android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_below="@+id/imageView"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vasileios"
                android:id="@+id/textView6"
                android:layout_marginTop="30dp"
                android:layout_column="5"
                android:layout_toRightOf="@+id/imageView2_vasi"
                android:layout_alignTop="@+id/imageView2_vasi"
                android:layout_marginLeft="75dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView3_juray"
                 android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_below="@+id/imageView2_vasi"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Juraj"
                android:id="@+id/textView7"
                android:layout_marginTop="30dp"
                android:layout_column="5"
                android:layout_toRightOf="@+id/imageView3_juray"
                android:layout_alignTop="@+id/imageView3_juray"
                android:layout_marginLeft="75dp" />

</RelativeLayout>
